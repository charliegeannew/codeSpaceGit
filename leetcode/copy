#include <iostream>
#include <vector>

using namespace std;

vector<int> findSubstring(string s,vector<string>& words);
int main()
{
    /* string s="wordwordbestgoodgoodgoodbestwordword"; */
    /* vector<string>words={"best","good","word"}; */
    string s="aaaaaaaa";
    vector<string> words={"aa","aa"};
    vector<int>res;
    res=findSubstring(s,words);
    cout<<"s === "<<s<<endl;
    for(int i=0;i<words.size();i++){
        cout<<words[i]<<' ';
    }
    cout<<endl;
    cout<<"result is "<<endl;
    for(int i=0;i<res.size();i++){
        cout<<res[i]<<' ';
    }
    cout<<endl;
    return 0;
}
vector<int> findSubstring(string s,vector<string>& words){
    vector <int> res;
    vector<int>index;
    vector<int>flag;
    int len=words[0].length();
    if(len*words.size()>s.length()){
        return res;
    }
    vector<string> tempWords;
    vector<int> wordsNumList;
    for(int i=0;i<words.size();i++){
        int j=0;
        for(j=0;j<tempWords.size();j++){
            if(words[i]==tempWords[j]){
                wordsNumList[j]++;
                break;
            }
        }
        if(j==tempWords.size()){
            tempWords.push_back(words[i]);
            wordsNumList.push_back(1);
        }
    }
    /* len=tempWords.size(); */
    for(int j=0;j<=s.length()-len;j++){
        for(int i=0;i<tempWords.size();i++){
            int k=0;
            for(k=0;k<len;k++){
                if(tempWords[i][k]!=s[j+k]){
                    break;
                }
            }
            if(k==len){
                index.push_back(j);
                flag.push_back(i);
            }
        }
    }
    cout<<"tempWords is "<<endl;
    for(int i=0;i<tempWords.size();i++){
        cout<<tempWords[i]<<' ';
    }
    cout<<endl;
    cout<<"wordsNumList is "<<endl;
    for(int i=0;i<wordsNumList.size();i++){
        cout<<wordsNumList[i]<<' ';
    }
    cout<<endl;
    int tempWordsNum=tempWords.size();
    for(int i=0;i<=index.size()-tempWordsNum;i++){
        vector<int> tempFlag=wordsNumList;
        tempFlag[flag[i]]--;
        int k;
        for(k=1;k<words.size();k++){
            cout<<"&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&7"<<endl;
            cout<<"in kkk "<<k<<endl;
            if(index[i+k]-index[i+k-1]!=len){
                cout<<"111111111"<<endl;
                break;
            }
            else{
                if(tempFlag[flag[i+k]]>0){
                    tempFlag[flag[i+k]]--;
                }
                else{
                    cout<<"22222222222"<<endl;
                    break;
                }
            }
        }
        cout<<"&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&7"<<endl;
        cout<<"k==== "<<k<<endl;
        if(k==words.size()){
            res.push_back(index[i]);
            /* int kk=0; */
            /* for(kk=0;kk<tempFlag.size();kk++){ */
            /*     if(tempFlag[kk]!=0){ */
            /*         break; */
            /*     } */
            /* } */
            /* cout<<"kk---- "<<kk<<endl; */
            /* if(kk==tempFlag.size()){ */
            /*     res.push_back(index[i]); */
            /* } */
        }
        cout<<"i===================== "<<i<<endl;
        for(int ii=0;ii<tempFlag.size();ii++){
            cout<<tempFlag[ii]<<' ';
        }
        cout<<endl;
        cout<<"words.size======================"<<words.size()<<endl;
    }
    cout<<"index is "<<endl;
    for(int i=0;i<index.size();i++){
        cout<<index[i]<<' ';
    }
    cout<<endl;
    cout<<"flag is "<<endl;
    for(int i=0;i<flag.size();i++){
        cout<<flag[i]<<' ';
    }
    cout<<endl;
    return res;
}
